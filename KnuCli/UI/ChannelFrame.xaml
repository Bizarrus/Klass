<Window x:Class="KnuCli.UI.ChannelFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnuCli.UI"
        xmlns:native="using:CSHTML5.Native.Html.Controls"
        mc:Ignorable="d"
        Title="ChannelFrame" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Row="0" Grid.Column="0">
            <StackPanel Name="Output" />
        </ScrollViewer>
        <ScrollViewer Name="Nicklist" Grid.Row="0" Grid.Column="1" />
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" />
            <Button Grid.Column="1" Content="Senden"/>
        </Grid>
        <Label Content="Label" HorizontalAlignment="Left" Margin="-49,360,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
